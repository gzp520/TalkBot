  right: 0rpx;
  margin: auto;
  border: 2px solid #39f;
  border-radius: 50%;
  opacity: 0;
  top: -32px;
  z-index: -1;
}

.p1 {
  animation: warn 2s ease-out infinite;
}

.p2 {
  animation: warn2 2s ease-out infinite;
}

@keyframes warn {
  0% {
    transform: scale(0.3);
    opacity: 0.0;
  }

  25% {
    transform: scale(0.3);
    opacity: 0.1;
  }

  50% {
    transform: scale(0.5);
    opacity: 0.3;
  }

  75% {
    transform: scale(0.8);
    opacity: 0.5;
  }

  100% {
    transform: scale(1);
    opacity: 0.0;
  }
}

@keyframes warn2 {
  0% {
    transform: scale(0.3);
    opacity: 0.0;
  }

  25% {
    transform: scale(0.3);
    opacity: 0.1;
  }

  50% {
    transform: scale(0.3);
    opacity: 0.3;
  }

  75% {
    transform: scale(0.5);
    opacity: 0.5;
  }

  100% {
    transform: scale(0.8);
    opacity: 0.0;
  }
}
