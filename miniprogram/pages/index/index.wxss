.flex-box{
  display: flex;
  margin: 30rpx;
  flex-wrap: wrap;
}
.flex-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 210rpx;
  height: 160rpx;
  background-color: #307af7;
  color: #fff;
  margin: 30rpx 10rpx;
  border-radius: 15rpx;
}
.flex-item:nth-child(1){
  background-color: #307af7;
  box-shadow: 0 10rpx 15rpx #307af7;
}
.flex-item:nth-child(2){
  background-color: #27a4ff;
  box-shadow: 0 10rpx 15rpx #27a4ff;
}
.flex-item:nth-child(3){
  background-color: #53cdff;
  box-shadow: 0 10rpx 15rpx #53cdff;
}
.flex-item:nth-child(4){
  background-color: #5f27cd;
  box-shadow: 0 10rpx 15rpx #5f27cd;
}
.flex-item:nth-child(5){
  background-color: #7d6bd3;
  box-shadow: 0 10rpx 15rpx #7d6bd3;
}
.flex-item:nth-child(6){
  background-color: #9c88ff;
  box-shadow: 0 10rpx 15rpx #9c88ff;
}
.flex-item image{
  width: 50%;
  height: 50%;
}
.flex-item text{
  display: block;
  margin-top: 10rpx;
  font-size: 10pt;
}

.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 300rpx;
}

.remind-img {
  width: 300rpx;
  height: 200rpx;
  padding-bottom: 15rpx;
}


.continueBtn {
  border: 1px solid #000;
  font-size: 15px;
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  right: 25%;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  z-index: 999;
  /* color: black; */
  text-align: center;
  background: linear-gradient(to right, rgb(48, 180, 163), rgb(47, 184, 154));
}